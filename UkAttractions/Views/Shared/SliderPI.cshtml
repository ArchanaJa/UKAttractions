
@model IEnumerable<UKAttractions.Models.ImageSlider>
@{
    Layout = null;
}

<div class="media">
    <div class="row ">
        <ul id="flexiselDemo">
            @foreach (var image in Model)
            {
                <li><a href="@Url.Action("Details", new { id = image.ID })"><img src="@Url.Content(@Html.DisplayFor(m => image.Image).ToString())" width="240" height="200" /></a></li>
            }
        </ul>
    </div>
</div>
<script type="text/javascript">

                $(function () {

                    $("#flexiselDemo").flexisel({
                        visibleItems: 4,
                        itemsToScroll: 1,
                        autoPlay: {
                            enable: true,
                            interval: 4000,
                            pauseOnHover: true
                        }
                    });
                });
</script>